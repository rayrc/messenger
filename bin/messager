#!/usr/bin/env ruby
require File.expand_path(File.dirname(__FILE__) + '/../lib/messager')
require 'trollop'


#
# Configure options
#

opts = Trollop::options do
  version "Messager #{Messager.version} (c) Zencoder Inc. All rights reserved, etc."
  banner <<-EOS
Messager makes sending messages easy.

Usage:
        script/messager [options] <service> <message>

Where [options] are:
EOS

  opt :silent, "Don't print anything to stdout", :default => false
  opt :verbose, "Print verbose output on success", :default => false
end

#
# Validate input
#

if ARGV[0].nil? || ARGV[1].nil?
  puts <<-EOS
Error: no service or message specified.

Usage (--help for more):

        script/messager [options] <service> <message>

EOS
  exit -1
end


#
# Run Messager
#

Messager.send(ARGV[0], ARGV[1], opts)
